# Enable Rewrite Engine
RewriteEngine On

# Set base directory for XAMPP
# Primary folder: grocery-king
# If project is in htdocs/grocery-king/, use /grocery-king/
# If project is in htdocs/online-grocery-store/, use /online-grocery-store/
# If project is directly in htdocs/, use /
# This will be auto-detected by PHP, but you can manually set it if needed
RewriteBase /grocery-king/

# Allow access to static files (CSS, JS, images, etc.)
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$">
    Require all granted
</FilesMatch>

# Allow access to public directory
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # Don't rewrite if it's a file in public directory
    # Supports both folder names (grocery-king is primary)
    RewriteCond %{REQUEST_URI} !^/(grocery-king|online-grocery-store)/public/
    # Allow direct access to PHP files
    RewriteCond %{REQUEST_URI} \.php$
    RewriteRule ^(.*)$ - [L]
</IfModule>

# Prevent directory listing
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8

# Enable compression for text files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Set cache headers for static files
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Redirect common admin routes (optional - for convenience)
# If user tries to access /add.php, redirect to admin dashboard
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^add\.php$ admin/index.php [R=301,L]
